  .s .st em,
  .st.s.std em,
  .hdtb-mn-hd,
  .hdtb-mn-hd,
  #hdtb .hdtb-mitem a,
  #brs .med,
  a.hdtb-tl
    color: #d5d55f !important

  /* search bar & "People also ask" styling */
