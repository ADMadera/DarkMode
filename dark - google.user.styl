  /* un-clicked links */
  a:link,
  .w,
  #prs a:visited,
  #prs a:active,
  .q:active,
  .q:visited,
  .kl:active,
  .tbotu,
  .a,
  cite,
  cite a:link,
  cite a:visited,
  .cite,
  .cite:link,
  #nygTcd > i,
  .bc a:link
    color: #00bcd4 !important

  /* clicked links */
