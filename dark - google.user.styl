  .gLFyf,
  .sbl1,
  .gb_r
    color: #fff !important

  /* color for result "breadcrumb" */
  .eipWBe,
  /* color for result stats */
  #result-stats
    color: #9da1a6 !important

  /* color used in "answer blurbs" */
  .e24Kjd,
  /* domain name for videos */
  .cJzOGc
    color: #fff !important

  .Z0LcW.AZCkJd
